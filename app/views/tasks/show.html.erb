<div class="container w-50">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @task.title %></h1>
    <div>
      <%= link_to edit_task_path(@task), class: 'btn btn-outline-primary' do %>
        <i class="fa-regular fa-pen-to-square"></i>
        Edit task
      <% end %>
    </div>
  </div>
  <div class="card my-4">
    <div class="card-header">
      Details
    </div>
    <div class="card-body">
      <%= @task.details %>
    </div>
  </div>
  <div class="mb-4">
    <i class="fa-regular fa-square<%= @task.completed ? '-check' : '' %> text-dark"></i>
    This task is <%= @task.completed ? '' : 'not' %> completed.
  </div>

  <%= link_to tasks_path, class: 'return' do %>
    <i class="fa-solid fa-rotate-left"></i>
    Back to list
  <% end %>
</div>
