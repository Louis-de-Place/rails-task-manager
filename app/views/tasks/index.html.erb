<div class="container w-50">
  <h1>Tasks</h1>
  <ul class="list-group list-group-flush">
    <% @tasks.each do |t| %>
      <li class="list-group-item d-flex justify-content-between">
        <div>
          <i class="fa-regular fa-square<%= t.completed ? '-check' : '' %> text-dark"></i>
          <%= link_to t.title, task_path(t), class:"task" %>
        </div>
        <%= link_to task_path(t), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-regular fa-trash-can text-dark"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a new task', new_task_path, class: 'btn btn-primary mt-3' %>
</div>
