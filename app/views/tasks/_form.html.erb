<%= form_with model: @task do |f| %>
  <div class="d-flex flex-column mb-3">
    <%= f.label :title, class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control mb-3" %>
    <%= f.label :details, class: "form-label fw-bold" %>
    <%= f.text_field :details, class: "form-control mb-3" %>
    <% unless @task.new_record? %>
      <div class="form-check">
        <%= f.check_box :completed, class: "form-check-input" %>
        <%= f.label :completed, class: "form-check-label" %>
      </div>
    <% end %>
  </div>
  <% action = @task.new_record?() ? 'Create' : 'Edit' %>
  <%= f.submit "#{action} Task", class: "btn btn-primary" %>
<% end %>
